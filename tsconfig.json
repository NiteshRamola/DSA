{
  "compilerOptions": {
    "target": "es6",                     // Specify ECMAScript target version
    "module": "commonjs",                // Specify module system (e.g., "commonjs", "esnext")
    "strict": true,                      // Enable strict mode
    "esModuleInterop": true,              // Enable interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                 // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in file names
    "moduleResolution": "node",          // Specify module resolution strategy
    "resolveJsonModule": true,           // Enable importing of JSON modules
    "declaration": true,                  // Generate declaration files (.d.ts)
    "outDir": "./dist",                   // Specify output directory for compiled files
    "rootDir": "./src",                   // Specify the root directory of input files
    "sourceMap": true,                    // Generate source maps for better debugging
    "strictNullChecks": true,             // Enable strict null checks
    "noImplicitAny": true                 // Raise error on expressions and declarations with an implied 'any' type
  },
  "include": [
    "src/**/*.ts"                       // Specify files to include in the compilation
  ],
  "exclude": [
    "node_modules"                      // Specify files to exclude from the compilation
  ]
}
